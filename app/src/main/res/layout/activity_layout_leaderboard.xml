<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout_Leaderboard"
    android:background="@drawable/button"
    android:padding="15dp"
>
    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/circleLeaderboard"
        android:background="@drawable/circle"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/circleLeaderboard"
        app:layout_constraintStart_toStartOf="@id/circleLeaderboard"
        app:layout_constraintEnd_toEndOf="@id/circleLeaderboard"
        app:layout_constraintBottom_toBottomOf="@id/circleLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classementText"
        android:text="1"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="@color/white"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/circleLeaderboard"
        app:layout_constraintBottom_toBottomOf="@id/circleLeaderboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center"
        android:id="@+id/namePlayerLeader"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:paddingEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/circleLeaderboard"
        app:layout_constraintBottom_toBottomOf="@id/circleLeaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:id="@+id/scoreTextLeader"
        android:gravity="end"
        android:textSize="20sp"
        android:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>